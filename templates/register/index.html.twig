{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

    <style>
        .alert{
            position:relative !important;
            padding:1rem 1rem !important;
            margin-bottom:1rem !important;
            border:1px solid transparent!important;
            border-radius:.25rem !important;
        }
        .alert-success{
            color:white!important;
            background-color: #8e89c4 !important;
            border-color: #8f8cc1 !important;
        }
    </style>


    <div class="container mx-auto mt-8">
        {% if notification %}
            <div class="alert alert-success">
              <p class="text-center">{{ notification }}</p>
            </div>
        {% endif %}
    </div>

    <div class="container mx-auto flex justify-center mt-8">





        <div class="w-full max-w-lg">

            {{ form_start(form) }}
                <h1  class="text-center mt-8" style="font-size: 30px!important;">Inscription</h1>

            <br><br>

            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">

                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}}) }}

                    {{ form_row(form.nom,  {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-blue-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                </div>
                <div class="w-full md:w-1/2 px-3">
                    {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}}) }}

                    {{ form_row(form.prenom,  {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-blue-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}}) }}

                    {{ form_row(form.email,  {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-blue-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}

                </div>
            </div>

            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'}}) }}

                    {{ form_row(form.password,  {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-blue-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}

                </div>
            </div>




            {{ form_end(form) }}
        </div>

    </div>


{% endblock %}
