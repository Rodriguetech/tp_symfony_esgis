{% extends 'base.html.twig' %}

{% block title %}bibliotheque{% endblock %}

{% block content %}

    {% if  bibliotheque|length > 0 %}

        <br>
        <br>

        <div class="space-y-4 flex justify-center">
            <div class="flow-root">
                <div class="my-4 ">
                    <a href="{{ path('bibliotheque_add') }}" class="py-2 px-2 font-medium text-white bg-blue-500 rounded hover:bg-blue-400 transition duration-300">
                        Ajouter une bibliotheque
                    </a>
                </div>
            </div>
        </div>

        <div class="container mx-auto mt-8">
            <div class="flex flex-col">
                <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                <tr>

                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Isbn
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Nombre de Musee
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                       Date d'achat
                                    </th>

                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Action
                                    </th>

                                </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">

                                {% for item in bibliotheque %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">
                                                        {{ item.ISBN }}
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                {{ item.nomMus }}
                                            </div>
                                        </td>

                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                {{ item.dateAchat.format('d/m/Y')}}
                                            </div>
                                        </td>

                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                <a href="{{ path('bibliotheque_remove', {'id': item.id}) }}" class="text-blue-500">Supprimé</a>
                                            </div>
                                        </td>
                                    </tr>


                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <br><br><br><br>

        <div class="flex justify-center bg-green-200 p-8 container mx-auto">
            <p class="text-center">Aucune bibliotheque n'a été enrégistré</p>&nbsp;
            <a class="text-blue-500" href="{{ path('bibliotheque_add') }}">cliqué ici pour ajouter une bibliotheque </a>
        </div>


    {% endif %}



{% endblock %}
