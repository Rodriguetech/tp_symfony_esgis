{% extends 'base.html.twig' %}

{% block title %}Ajouter un Ouvrage{% endblock %}

{% block content %}


    <style>
        .alert{
            position:relative !important;
            padding:1rem 1rem !important;
            margin-bottom:1rem !important;
            border:1px solid transparent!important;
            border-radius:.25rem !important;
        }
        .alert-success{
            color:white!important;
            background-color: #8e89c4 !important;
            border-color: #8f8cc1 !important;
        }
    </style>

    <br><br>

    <div class="mt-5 md:mt-0 md:col-span-2 container mx-auto">

        {% if notification %}
            <div class="alert alert-success">
                {{ notification }}
            </div>
        {% endif %}


        {{ form_start(form)}}
        <div class="shadow overflow-hidden sm:rounded-md ">
            <div class="px-4 py-5 bg-white sm:p-6">
                <div class="grid grid-cols-6 gap-6  mx-auto">

                    <div class="col-span-6 sm:col-span-4">
                        {{ form_label(form.ISBN, 'ISBN', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_row(form.ISBN,  {'attr': {'class': 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>


                    <div class="col-span-6 sm:col-span-4">
                        {{ form_label(form.titre, "Titre de l'ouvrage", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_row(form.titre,  {'attr': {'class': 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>


                    <div class="col-span-6 sm:col-span-4">
                        {{ form_label(form.nbPage, 'Nombre de page', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_row(form.nbPage,  {'attr': {'class': 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>



                    <div class="col-span-6 sm:col-span-4">
                        <div class="flex justify-between">
                            {{ form_label(form.codePays, "Pays", {'class': {'class': 'block text-sm font-medium text-gray-700'}}) }}

                            <a href="{{ path('pays_add') }}" class="text-blue-500">Ajouter un pays</a>
                        </div>


                        {{ form_row(form.codePays,  {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full p-4 shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    </div>


                </div>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form)}}
    </div>



{% endblock %}
